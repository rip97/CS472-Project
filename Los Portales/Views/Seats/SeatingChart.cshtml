@model List<Los_Portales.Models.Seat>

@{
    ViewData["Title"] = "SeatingChart";
}


<h1 style="text-align:center">Seating Chart: @Model[0].Play?.PlayName</h1>
<div class="container-fuild" id="seats"> 
    <div class="stage"> <h2 style="text-align:center; align-content:center;" > Stage </h2></div>
        <div class="container-seat">
            @for(int i = 0; i <8; i++)
            {   
                <div class="row" style="display:flex;margin-left:45px;">
                @for(int j = 0; j < 10; j++)
                {   
                    @if(Model[j+(i*10)].IsSold != 1)
                    {   
                        if(ViewBag.IsInCart.Contains(Model[j+(i*10)].SeatId))
                        {
                            <div class="seat-taken">
                            <h6 class="text-dark"> @Model[j+(i*10)].SeatNumber.ToString()</h6>
                            </div>
                        }
                        else
                        {
                            <div class="seat-avialable"> 
                            <h6 class="text-dark"> @Model[j+(i*10)].SeatNumber.ToString()</h6>
                            <a class="text-dark" asp-action="AddToCart" asp-route-id=@Model[j+(i*10)].SeatId.ToString()><h6> View </h6></a>
                            </div>
                        }                      
                    }
                    else
                    {
                        <div class="seat-taken">
                            <h6 class="text-dark"> @Model[j+(i*10)].SeatNumber.ToString()</h6>
                        </div>
                    }                    
                }
                </div>       
            }     
    </div> 
    <form asp-controller="Plays" asp-action="Index">
        <button class="btn btn-success">Back to Plays </button>
    </form>
</div>

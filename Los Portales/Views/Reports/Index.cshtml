@model Los_Portales.Models.Report

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h1 style="text-align: center; margin-bottom: 20px;">Generate a Report</h1>

<div class="row">
    <div class="col-md-4 offset-1" style="font-size:20px;">
        <form asp-action="Report">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
        <div class="form-group">
             <label asp-for="PlayName" class="control-label" style="margin-bottom:10px">Plays</label>
             <select asp-for="PlayName" class="form-control">
                 @foreach(Play play in ViewBag.Plays)
                {
                    <option>@play.PlayName</option>
                }
            </select>
         </div>
         <hr />
         <label>Please select one or more the following report options</label>
         <div class="form-group">
            <div class="checkbox">
                 <label>
                    <input id="sold" asp-for="SeatsSold" /> @Html.DisplayNameFor(model => model.SeatsSold)
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                 <label>
                    <input id="availabe" asp-for="SeatsAvailabe" /> @Html.DisplayNameFor(model => model.SeatsAvailabe)
                </label>
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <input type="submit" value="Report" class="btn btn-success" />
        </div>
        </form>
    </div>
    <div class="col-md-5 offset-1">
    <img src="~/images/report.jpg" height="400" width="600" > 
    </div>
</div>
</div>